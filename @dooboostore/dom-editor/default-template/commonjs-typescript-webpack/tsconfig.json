{
  "compilerOptions": {
    "allowJs": true,
    "target": "es6",
    "module": "ES2015",
    "strict": false,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@dooboostore/dom-editor": ["../../src/index.ts"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es5",
      "es2015",
      "es2019",
      "scripthost",
      "es2015.proxy",
      "es2015.collection"
    ]
  },
  "exclude": [
    "rollup.config.js",
    "test",
    "cli",
    "assets",
    "test-cli",
    "**/*.test.ts",
    "templates",
    "dist"
  ]
}