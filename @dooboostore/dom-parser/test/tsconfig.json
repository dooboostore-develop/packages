{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
            "@dooboostore/core": ["../../../../@dooboostore/core/src/*"],
            "@dooboostore/core-node": ["../../../../@dooboostore/core-node/src/*"],
            "@dooboostore/core-web": ["../../../../@dooboostore/core-web/src/*"],
            "@dooboostore/dom-parser": ["../../../../@dooboostore/dom-parser/src/*"]

    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
