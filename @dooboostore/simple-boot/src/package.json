{
  "name": "@dooboostore/simple-boot",
  "version": "1.0.43",
  "license": "MIT",
  "description": "front end SPA frameworks",
  "keywords": [
    "module",
    "framwork",
    "node"
  ],
  "author": "dooboostore <dooboostore@gmail.com> (https://github.com/dooboostore)",
  "contributors": [
    "sewoo <sewooimda@nate.com> (https://github.com/sewoo)",
    "SeoDH <adonis_84@naver.com> (https://github.com/SeoDH)",
    "tkyung (https://github.com/tkyungDev)",
    "Hoil-Gang (https://github.com/khl1154)",
    "hwangsero (https://github.com/hwangsero)"
  ],
  "homepage": "https://github.com/dooboostore-develop/packages",
  "bugs": {
    "url": "https://github.com/dooboostore-develop/packages",
    "email": "dooboostore@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dooboostore-develop/packages"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "\\.test\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "globals": {
      "ts-jest": {
        "diagnostics": true
      }
    }
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "**/*.js",
    "**/*.d.ts"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "tsc:build": "rm -rf dist && tsc -p tsconfig.build.json",
    "clean": "rm -rf  dist",
    "npm:build": "pnpm run tsc:build && pnpm run bundle && cp README.MD dist/ && pnpm pack && TARBALL_NAME=$(ls dooboostore-simple-boot-*.tgz | head -n 1) && tar -xzf \"$TARBALL_NAME\" -C dist --strip-components=1 package/package.json && rm \"$TARBALL_NAME\"",
    "npm:clean": "rm -rf  dist",
    "npm:publish": "pnpm run npm:build && cd dist && pnpm publish --no-git-checks",
    "npm:publish:clean": "pnpm run npm:publish && rm -rf dist",
    "bundle": "webpack --config webpack.config.js",
    "ts:clean": "find . -name '*.js' -o -name '*.map' -o -name '*.d.ts' | xargs rm -f",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@dooboostore/core": "workspace:*",
    "@dooboostore/core-node": "workspace:*",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3",
    "mkdirp": "^1.0.4",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "tslib": "^2.8.1",
    "@types/node": "^20",
    "typescript": "^5.9.2",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1"

  }
}
