{
  "compilerOptions": {
    "rootDir": "src",
    "declarationDir": "dist/types",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "target": "es2020",
    "lib": ["esnext", "dom"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "example", "test"]
}