{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "lib": ["ES2019", "DOM", "DOM.Iterable"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
            "@dooboostore/simple-boot": ["../../../../@dooboostore/simple-boot/src/*"],
            "@dooboostore/simple-boot-http-server": ["../../../../@dooboostore/simple-boot-http-server/src/*"],
            "@dooboostore/simple-boot-http-server-ssr": ["../../../../@dooboostore/simple-boot-http-server-ssr/src/*"],
            "@dooboostore/simple-boot-front": ["../../../../@dooboostore/simple-boot-front/src/*"],
            "@dooboostore/core": ["../../../../@dooboostore/core/src/*"],
            "@dooboostore/core-node": ["../../../../@dooboostore/core-node/src/*"],
            "@dooboostore/core-web": ["../../../../@dooboostore/core-web/src/*"],
            "@dooboostore/dom-render": ["../../../../@dooboostore/dom-render/src/*"]

    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
