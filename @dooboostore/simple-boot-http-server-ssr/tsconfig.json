{
  "compilerOptions": {
    "rootDir": "src",
    "declarationDir": "dist/types",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true,
    "noEmit": true,
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
//      "@dooboostore/core/*": ["../../core/src/*"],
//      "@dooboostore/core": ["../../core/src/index.ts"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.ts", "example", "test"]
}